<div class="impostazioni">
  <% if flash[:notice] %>
            <div class="alert alert-success" role="alert">
                <%= flash[:notice] %>
            </div>
            <% end %>

            <% if flash[:alert] %>
            <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
            </div>
        <% end %>
  <h1>Impostazioni</h1>
  <p>Stile dell'applicazione</p>
  <div class="s-section">
    <p>
      <strong>Font: </strong>
      <%= @setting.font %>
    </p>

    <p>
      <strong>Dimensione del testo: </strong>
      <%= @setting.font_size %>
    </p>

    <p>
      <strong>Tema: </strong>
      <%= @setting.theme == 'day' ? 'Giorno' : 'Notte' %>
    </p>
  </div>
  <p>Gestisci le tue credenziali</p>
  <div class="s-section">
    <% if session[:role] == 'User' || session[:role] == 'Critico' %>
      <p>
        <strong>Username: </strong>
        <%= @current_user.cliente.user.username %>
      </p>
      <p>
        <strong>Nome: </strong>
        <%= @current_user.cliente.user.nome %>
      </p>
      <p>
        <strong>Cognome: </strong>
        <%= @current_user.cliente.user.cognome %>
      </p>
    <% elsif session[:role] == 'Ristoratore' %>
      <p>
        <strong>Nome ristorante: </strong>
        <%= @current_user.cliente.ristoratore.nomeristorante %>
      </p>
      <p>
        <strong>Indirizzo: </strong>
        <%= @current_user.cliente.ristoratore.indirizzo %>
      </p>
      <p>
        <strong>Piva: </strong>
        <%= @current_user.cliente.ristoratore.piva %>
      </p>
    <% end %>
    <p>
      <strong>Email: </strong>
      <%= @current_user.email %>
    </p>
    <p>
      <strong>Password: </strong>
      <%= masked_password(@current_user.password_digest) %>
    </p>
  </div>

  <%= link_to 'Modifica Impostazioni', edit_settings_path %>
  <br>
  <%= form_with url: settings_path(current_user), method: :delete, data: { confirm: 'Sei sicuro di voler eliminare il tuo account?' } do |form| %>
    <%= form.submit 'Elimina l\'account' %>
  <% end %>  
  
</div>
