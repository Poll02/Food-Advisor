<header class="navbar-header">
    <a><h1>FoodAdvisor</h1></a>

    <nav id="homepage-nav" >
            <a href="<%= root_path %>">Homepage</a>
            <a href="<%= ricerca_path %>">Ristoranti</a>
            <a href="<%= competizioni_path %>">Competizioni</a>
            <a href="<%= classifiche_path %>"><ion-icon name="trophy"></ion-icon></a>
            <a href="#" class="active"  onclick="toggleDropdown()"><ion-icon name="person-circle-outline"></ion-icon></a>
            <div class="dropdown" id="dropdown">
                <% if logged_in? %>
                    <% case session[:role] %>
                        <% when 'Admin' %>
                        <a href="/admin_profile">Visualizza Profilo</a>
                        <% when 'Ristoratore' %>
                        <a href="/rest_profile">Visualizza Profilo</a>
                        <% when 'User' %>
                        <a href="/user_profile">Visualizza Profilo</a>
                        <% when 'Critico' %>
                        <a href="/critic_profile">Visualizza Profilo</a>
                    <% end %>
                    <a href="/logout">Logout</a>
                <% else %>
                    <a href="/login">Accedi</a>
                    <a href="/signup">Registrati</a>
                <% end %>

            </div>
    </nav>

    <script>
        function toggleDropdown() {
            var dropdown = document.getElementById('dropdown');
            if (dropdown.style.display === 'block') {
                dropdown.style.display = 'none';
            } else {
                dropdown.style.display = 'block';
            }
        }
    </script>
</header>
